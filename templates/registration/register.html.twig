{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="row">
<div class="col-md-6 offset-md-3 register">

    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.name, {'attr': {'placeholder': 'Nom'}}) }}
        {{ form_row(registrationForm.prenom, {'attr': {'placeholder': 'Prenom'}}) }}
        {{ form_row(registrationForm.sexe) }}
        {{ form_row(registrationForm.nationalite, {'attr': {'placeholder': 'Nationalite'}}) }}
        {{ form_row(registrationForm.datenaiss, {'attr': {'placeholder': 'Date de naissance'}}) }}
        {{ form_row(registrationForm.email, {'attr': {'placeholder': 'Mail'}}) }}
        {{ form_row(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe'}}) }}

        <button class="btn btn-primary" style="margin-top: 2%;">Valider</button>
    {{ form_end(registrationForm) }}
</div>
</div>
{% endblock %}
